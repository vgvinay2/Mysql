USE test_db;
Create Tables:

CREATE TABLE Tastes
(Name VARCHAR(30) ,
Filling VARCHAR(30),
PRIMARY KEY(Name,Filling));

CREATE TABLE Locations
(LName VARCHAR(30) ,
Phone VARCHAR(30),
Address VARCHAR(30),
PRIMARY KEY(Lname));

CREATE TABLE Sandwiches
(Location VARCHAR(30),
Bread VARCHAR(30),
Filling VARCHAR(30) ,
Price FLOAT,
PRIMARY KEY(Location,Bread,Filling),
FOREIGN KEY (Location) REFERENCES Locations(LName)
);


