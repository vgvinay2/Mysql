Queries:

select Location from Sandwiches where Filling IN(
select filling from Tastes where name="Jones");

select s.Location from Sandwiches s
left JOIN Tastes t
ON s.Filling=t.Filling
where t.Name="Jones";

select s.Location,count(t.Name) AS No_Of_People from Sandwiches s
LEFT JOIN Tastes t
ON t.Filling=s.Filling
GROUP BY s.Location; 

